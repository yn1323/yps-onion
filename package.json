{
  "name": "yps-onion",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:deploy": "pnpm prisma generate && next build",
    "start": "next start",
    "test": "vitest ",
    "lint": "biome lint app components src",
    "lint:fix": "biome check --apply app components src",
    "type-check": "tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-once-uploaded",
    "generate": "scaffdog generate",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "pnpm dlx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm dlx http-server storybook-static --port 6006 --silent\" \"pnpm dlx wait-on tcp:127.0.0.1:6006 && pnpm test-storybook\"",
    "e2e": "playwright test",
    "e2e:ui": "pnpm prisma:reset && playwright test --ui",
    "e2e:debug": "pnpm prisma:reset && playwright test --debug",
    "e2e:report": "pnpm prisma:reset && playwright show-report",
    "e2e:codegen": "playwright codegen",
    "prisma": "prisma",
    "prisma:reset": "pnpm prisma db push --force-reset && pnpm prisma db seed"
  },
  "dependencies": {
    "@hookform/resolvers": "3.9.0",
    "@prisma/client": "5.20.0",
    "@supabase/ssr": "^0.5.0",
    "@supabase/supabase-js": "2.45.4",
    "date-fns": "4.1.0",
    "framer-motion": "11.9.0",
    "jotai": "2.10.0",
    "next": "latest",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "react-icons": "5.3.0",
    "server-only": "0.0.1",
    "tailwind-merge": "2.5.2",
    "tailwind-variants": "0.2.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@chromatic-com/storybook": "2.0.2",
    "@playwright/test": "1.47.2",
    "@storybook/addon-a11y": "8.3.4",
    "@storybook/addon-essentials": "8.3.4",
    "@storybook/addon-interactions": "8.3.4",
    "@storybook/addon-links": "8.3.4",
    "@storybook/addon-onboarding": "8.3.4",
    "@storybook/blocks": "8.3.4",
    "@storybook/nextjs": "8.3.4",
    "@storybook/react": "8.3.4",
    "@storybook/test": "8.3.4",
    "@storybook/test-runner": "0.19.1",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.16.10",
    "@types/react": "18.3.10",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "10.4.20",
    "chromatic": "11.10.4",
    "dotenv": "^16.4.5",
    "happy-dom": "15.7.4",
    "jsdom": "25.0.1",
    "msw": "2.4.9",
    "msw-storybook-addon": "2.0.3",
    "playwright": "1.47.2",
    "postcss": "8.4.47",
    "prisma": "5.20.0",
    "scaffdog": "4.1.0",
    "storybook": "8.3.4",
    "tailwindcss": "3.4.13",
    "ts-node": "10.9.2",
    "tsx": "^4.16.2",
    "typescript": "5.6.2",
    "vitest": "2.1.1"
  },
  "prisma": {
    "seed": "tsx  ./prisma/seeds/index.ts"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}