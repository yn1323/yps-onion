{
  "name": "yps-onion",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:deploy": "pnpm prisma generate && next build",
    "start": "next start",
    "test": "vitest ",
    "lint": "biome lint app components src",
    "lint:fix": "biome check --apply app components src",
    "type-check": "tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-once-uploaded",
    "generate": "scaffdog generate",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "pnpm dlx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm dlx http-server storybook-static --port 6006 --silent\" \"pnpm dlx wait-on tcp:127.0.0.1:6006 && pnpm test-storybook\"",
    "e2e": "playwright test",
    "e2e:ui": "pnpm prisma:reset && playwright test --ui",
    "e2e:debug": "pnpm prisma:reset && playwright test --debug",
    "e2e:report": "pnpm prisma:reset && playwright show-report",
    "e2e:codegen": "playwright codegen",
    "prisma": "prisma",
    "prisma:reset": "pnpm prisma db push --force-reset && pnpm prisma db seed"
  },
  "dependencies": {
    "@hookform/resolvers": "5.0.1",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "2.49.4",
    "date-fns": "4.1.0",
    "framer-motion": "12.6.3",
    "jotai": "2.12.2",
    "next": "^15.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.55.0",
    "react-icons": "5.5.0",
    "server-only": "0.0.1",
    "tailwind-merge": "3.2.0",
    "tailwind-variants": "1.0.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "3.2.6",
    "@playwright/test": "1.51.1",
    "@prisma/client": "5.20.0",
    "@storybook/addon-a11y": "8.6.12",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-links": "8.6.12",
    "@storybook/addon-onboarding": "8.6.12",
    "@storybook/blocks": "8.6.12",
    "@storybook/nextjs": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/test": "8.6.12",
    "@storybook/test-runner": "0.22.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.21",
    "chromatic": "11.28.0",
    "dotenv": "^16.4.7",
    "happy-dom": "17.4.4",
    "jsdom": "26.0.0",
    "msw": "2.7.3",
    "msw-storybook-addon": "2.0.4",
    "playwright": "1.51.1",
    "postcss": "8.5.3",
    "prisma": "5.20.0",
    "scaffdog": "4.1.0",
    "storybook": "8.6.12",
    "tailwindcss": "3.4.13",
    "ts-node": "10.9.2",
    "tsx": "^4.19.3",
    "typescript": "5.8.3",
    "vitest": "3.1.1"
  },
  "prisma": {
    "seed": "tsx  ./prisma/seeds/index.ts"
  },
  "msw": {
    "workerDirectory": ["public"]
  }
}
